{
    "version": "0.2.0",
    "configurations": [
        {
            "name":    "erhe editor GBD",
            "type":    "cppdbg",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "program": "${command:cmake.launchTargetPath}",
        },
        {
            "name":        "erhe editor GBD Remote",
            "type":        "cppdbg",
            "request":     "launch",
            "cwd":         "${workspaceFolder}/src/editor",
            "environment": [ {"name": "DISPLAY", "value": ":0"}],
            "program":     "${command:cmake.launchTargetPath}",
        },
        {
            "name":    "erhe editor LLDB",
            "type":    "lldb",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "program": "${command:cmake.launchTargetPath}",
        },
        {
            "name":    "hextiles LLDB",
            "type":    "lldb",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/hextiles",
            "program": "${command:cmake.launchTargetPath}",
        },
        {
            "name":    "editor VS",
            "windows": {
                "type": "cppvsdbg",
            },
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "cwd":     "${workspaceFolder}/src/editor",
        },
        {
            "name":    "Python: Current File",
            "type":    "python",
            "request": "launch",
            "program": "${file}",
            "args":    ["${workspaceFolder}/build/src/erhe/gl"],
            "console": "integratedTerminal"
        }
    ]
}
